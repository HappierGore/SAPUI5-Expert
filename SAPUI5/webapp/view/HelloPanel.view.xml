<mvc:View controllerName="DTT.SAPUI5.controller.HelloPanel"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:core="sap.ui.core"
>
    <Panel
        id="_IDGenPanel3" 
        headerText="{i18n>helloPanel}" 
        class="sapUiResponsiveMargin" 
        width="auto"
        expandable="{device>/system/phone}"
        expanded="{= !${device>/system/phone}}"
        >
        <Button id="_IDGenButton4"
            text="{i18n>helloDialogBtn}"
            press= ".onOpenDialog"
            class ="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"
            icon = "sap-icon://action"
        />
        <Button id="_IDGenButton3" 
            text="{i18n>showHelloButtonText}" 
            press=".onShowHello"
            class ="sapUiSmallMarginEnd sapUiHideOnDesktop"
        />
        <Input id="_IDGenInput3" 
            value="{/recipient/name}"
            valueLiveUpdate="true"
            width="60%" 
        />
        <Text id="_IDGenText3"
            text="Hola! {/recipient/name}"
            class ="sapUiSmallMargin
            boldElements
            sapthemeHighlight-asColor"
        />
    </Panel>

    <core:Fragment 
    fragmentName ="DTT.SAPUI5.view.Form01" 
    type = "XML"
    />     
</mvc:View>